{{ attach_library('storybook/ContentArticle') }}

{% if image %}
	{% set topImage %}
	{% include "@hanna/ContentImage.twig" with{
			text: imageText,
			credit: imageCredit,
			image: image,
		}%}
	{% endset %}
{% endif %}

{% set contentText %}
{{ topImage }}
{{ summary }}
{% endset %}

<div class="ContentArticle">
	<div class="ContentArticle__header">
		{% include "@hanna/Heading.twig" with {
      forceH1: 'true',
      title: label
    }%}

		{% include "@hanna/ArticleMeta.twig" with {
      items: articleMeta,
    }%}

		{% if sector_tag_1 is not empty %}
			<p>
				<span class="TagPill TagPill--large">{{ sector_tag_1}}</span>
				{% if sector_tag_2 is not empty %}
					<span class="TagPill TagPill--large">{{ sector_tag_2}}</span>
				{% endif %}
			</p>
		{% endif %}
	</div>

	{% include "@hanna/TextBlock.twig" with {
		content: contentText
	}%}

	{% if relatedItems is defined and relatedItems|length > 0 %}
		{% include "@hanna/VSpacer.twig" with {
			size: 'true',
			small: 'small',
			content: '<hr/>'
		}%}

		{% include "@hanna/RelatedLinks.twig" with {
			title: 'Related material'|trans,
			items: relatedItems
		}%}
	{% endif %}

	{% include "@hanna/VSpacer.twig" with {
		size: 'true',
		small: 'small',
		content: ''
	}%}
</div>
