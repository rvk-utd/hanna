{{ attach_library('hanna/BreadCrumbs') }}

<nav class="BreadCrumbs" aria-label="{{ BreadCrumbs_title }}">
	<span class="BreadCrumbs__title">{{ BreadCrumbs_title }}:</span>
	{% for item in BreadCrumbs_items %}
		<a
			class="BreadCrumbs__item"
			href="{{ item['url'] }}"
			{%  if loop.last %}
				aria-current="true"
			{% endif %}
		>
			{{ item['text'] }}
		</a>
		{% if not loop.last %}
			<span class="BreadCrumbs__separator" role="none">&gt;</span>
		{% endif %}
	{% endfor %}
</nav>
