  "repository": "ssh://git@github.com:rvk-utd/hanna.git",
  "homepage": "https://github.com/rvk-utd/hanna/blob/main/modules/visual-tests/README.md",
  "license": "MIT",
  "scripts": {
    "webserver:build": "yarn run remix build",
    "webserver:dev": "PORT=7357  yarn run remix dev",
    "webserver:start": "PORT=7357 yarn run remix-serve _remix-build",
    "webserver:testingmode": "yarn run webserver:build && yarn run webserver:start",
    "__webserver:testingmode": "yarn run webserver:dev",
    "test": "node build-tests.mjs  &&  echo \"Running Visual Regression Tests.  Please wait...\n\"  &&  npx playwright test -c tests/playwright.config.js ||  (((cd ../hanna-css && yarn run dev:server) & yarn run webserver:dev & (sleep 2.5 && open http://localhost:7357/review?errored))  &&  (exit 1))"
  },
  "dependencies": {
    "@hugsmidjan/qj": "^4.22.1",
    "@remix-run/node": "^1.15.0",
    "@remix-run/react": "^1.15.0",
    "@remix-run/serve": "^1.15.0",
    "@remix-run/v1-route-convention": "^0.1.1",
    "@reykjavik/hanna-css": "workspace:*",
    "@reykjavik/hanna-react": "workspace:*",
    "@reykjavik/hanna-utils": "workspace:*",
    "glob": "^10.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.37.1",
    "@remix-run/dev": "^1.15.0",
    "@remix-run/eslint-config": "^1.15.0",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9"
  },
  "engines": {
    "node": "16"
  },
  "sideEffects": false
}
