{
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "search.exclude": {
    "**/.yarn": true,
    "**/.pnp.*": true,
    "servers/docs/*": true,
    "servers/styles/*": true,
    "modules/visual-tests/tests/*": true,
    "modules/html-storybook/CHANGELOG.md": true // This is a symlink to the project-root CHANGELOG.md.
  }
}
